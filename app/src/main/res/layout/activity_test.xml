<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.test">
    <RelativeLayout
        android:id="@+id/rltdsbaihat"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/imghinh"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/custom_background_banner"/>

        <ImageView
            android:id="@+id/imghinhbaihat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:elevation="7dp"
            android:scaleType="fitXY" />
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingactionbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltdsbaihat"
        android:layout_centerHorizontal="true"

        android:src="@drawable/baseline_music_note_24"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleviewdsbaihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floatingactionbutton"
        android:layout_marginTop="15dp"/>

</RelativeLayout>