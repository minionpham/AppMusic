<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imgbaihat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/tvtenbaihat"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="6dp"
        android:text="Chim Sau"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvtencasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtenbaihat"
        android:layout_marginTop="7dp"
        android:layout_alignLeft="@+id/tvtenbaihat"
        android:maxLines="1"
        android:text="RPT MCK"
        android:textColor="#AC9999"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/imgthich"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/iconlove"
        android:layout_marginRight="10dp"/>

</RelativeLayout>