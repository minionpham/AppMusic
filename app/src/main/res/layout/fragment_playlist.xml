<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvplaylist"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlayList"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
       />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerplaylist"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/tvplaylist"
        android:background="#03A9F4">
    </androidx.viewpager.widget.ViewPager>
    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicatorplaylist"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/viewpagerplaylist"
        android:layout_alignRight="@+id/viewpagerplaylist"
        android:layout_width="wrap_content"
        android:layout_height="13dp"/>

    <TextView
        android:id="@+id/tvxemthem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewpagerplaylist"
        android:background="#D8D0D0"
        android:gravity="center"
        android:padding="1dp"
        android:text="Xem ThÃªm"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>